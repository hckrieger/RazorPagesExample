@page
@model PersonalWebsite.Pages.Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <div>
        <a class="btn btn-md btn-info" asp-page="./Edit" asp-route-id="@Model.Post.PostId">Edit</a> 
        <a class="btn btn-md btn-info" asp-page="./Index">Back to List</a>
    </div>
   <hr />
}

<div class="post post-@Model.Post.PostId">
    <div class="post-header">
        <h6>@Html.DisplayFor(m => m.Post.DatePublished)</h6>
        <h2>@Html.DisplayFor(m => m.Post.Title)</h2>
        <h5>By Hunter Krieger</h5>
        <h6>Category: @Html.DisplayFor(m => m.Post.Category.Name)</h6>
    </div>
    <div class="post-content">
        @Html.Raw(Model.Post.Content)
    </div>

</div>

